{
  "name": "@alternatefutures/auth-service",
  "version": "0.1.0",
  "description": "Alternate Futures Authentication Service - Multi-method authentication system",
  "private": false,
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "prisma generate && tsc",
    "start": "node dist/index.js",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:migrate:deploy": "prisma migrate deploy",
    "db:studio": "prisma studio",
    "db:seed": "tsx scripts/seed-plans.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write .",
    "postinstall": "prisma generate"
  },
  "keywords": [
    "authentication",
    "auth",
    "jwt",
    "oauth",
    "web3",
    "wallet",
    "magic-link",
    "passwordless"
  ],
  "author": "Alternate Futures",
  "license": "MIT",
  "dependencies": {
    "@hono/node-server": "^1.19.5",
    "@infisical/sdk": "^2.3.4",
    "@noble/curves": "^2.0.1",
    "@noble/hashes": "^2.0.1",
    "@noble/secp256k1": "^3.0.0",
    "@prisma/client": "^6.1.0",
    "dotenv": "^17.2.3",
    "ethers": "^6.13.0",
    "hono": "^4.10.5",
    "jsonwebtoken": "^9.0.2",
    "nanoid": "^5.0.7",
    "stripe": "^20.0.0",
    "twilio": "^5.10.7",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^24.10.1",
    "eslint": "^9.0.0",
    "prettier": "^3.4.2",
    "prisma": "^6.1.0",
    "tsx": "^4.7.1",
    "typescript": "^5.4.3",
    "vitest": "^4.0.8",
    "wrangler": "^4.42.2"
  },
  "engines": {
    "node": ">=18"
  }
}
